{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "typeRoots": ["./src/global.d.ts"],
    "strict": false,
    "allowImportingTsExtensions": true,
    "target": "ESNext",
    "module": "ESNext",
    "resolveJsonModule": true,
    "allowJs": true,
    "types": ["chrome", "vite/client"],
    "checkJs": false,
    "isolatedModules": false,
    "skipLibCheck": true,
    "moduleResolution": "node10",
    "noEmit": true
  },
  "include": [
    "./src/global.d.ts",
    "./src/**/*",
    "index.js",
   ],
  "exclude": ["node_modules"]
}
