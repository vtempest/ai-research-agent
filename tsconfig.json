{

  "compilerOptions": {
    "typeRoots": ["./web-app/src/global.d.ts"],

    "paths": {
      "$ai-research-agent": ["../*"],
      "./$types": ["./web-app/src/global.d.ts"],
      "$types": ["./web-app/src/global.d.ts"],
      "$lib/*": ["./web-app/src/lib/*"],
      "$lib": ["./web-app/src/lib/index.ts"],
      "$components/*": ["./web-app/src/lib/components/*"]
    },
    "target": "ESNext",
    "module": "ESNext",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "isolatedModules": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": [
    "./src/**/*",
    "index.js",
    "web-app/src/global.d.ts",
    "web-app/src/**/*",
   ],
  "exclude": [
    "node_modules",
  ]
}
