{
  "name": "qwksearch-web-app",
  "type": "module",
  "version": "1.0.0",
  "description": "Search, extract, vectorize, outline graph, and monitor web research",
  "author": "vtempest <grokthiscontact@gmail.com>",
  "license": "PROSPER-1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"NODE_NO_WARNINGS=1 vite dev\" \"wait-on http://localhost:5173 && opener http://localhost:5173\"",
    "serve": "NODE_NO_WARNINGS=1 vite build; bunx wrangler deploy; concurrently  \"opener https://qwksearch.com  \" \" bunx wrangler tail\"",
    "make": "NODE_OPTIONS=--max-old-space-size=12192 BUN_JSC_forceRAMSize=12192  NODE_NO_WARNINGS=1 vite build",
    "logs": "bunx wrangler tail",
    "preview": "bunx wrangler dev --live-reload && bunx opener http://localhost:5173",
    "test": "vitest",
    "db:generate": "drizzle-kit generate  --config=./src/lib/server/drizzle.config.ts",
    "db:push:dev": "wrangler d1 migrations apply qwksearch-db --local",
    "db:push:prod": "wrangler d1 migrations apply  qwksearch-db --remote",
    "db:studio": "ENV=dev drizzle-kit studio  --config=./src/lib/db/drizzle.config.ts",
    "db:backup": "wrangler d1 export qwksearch-db --output backup-prod.sql --remote",
    "format": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "build:icons": "bunx export-svg-typescript@latest -i ./src/lib/components/icons -o ./src/lib/components/icons/index.ts"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250606.0",
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@internationalized/date": "^3.8.2",
    "@lucide/svelte": "^0.511.0",
    "@sveltejs/adapter-cloudflare": "^7.0.3",
    "@sveltejs/kit": "^2.21.2",
    "@sveltejs/vite-plugin-svelte": "^5.1.0",
    "@types/eslint": "9.6.1",
    "@typescript-eslint/eslint-plugin": "8.33.1",
    "@typescript-eslint/parser": "8.33.1",
    "@vitest/coverage-v8": "^3.2.2",
    "@vitest/ui": "^3.2.2",
    "cmdk-sv": "^0.0.19",
    "concurrently": "^9.1.2",
    "drizzle-kit": "^0.31.1",
    "eslint": "^9.28.0",
    "eslint-plugin-svelte": "3.9.1",
    "export-svg-typescript": "0.1.11",
    "import-meta-resolve": "^4.1.0",
    "open-cli": "^8.0.0",
    "opener": "^1.5.2",
    "postcss-load-config": "^6.0.1",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "svelte-check": "^4.2.1",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vitest": "^3.2.2",
    "wait-on": "^8.0.3",
    "wrangler": "^4.20.0"
  },
  "dependencies": {
    "@sveltejs/adapter-cloudflare-workers": "^2.9.0",
    "@tailwindcss/vite": "^4.1.8",
    "@types/chrome": "^0.0.326",
    "better-auth": "^1.2.8",
    "bits-ui": "^2.4.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.44.2",
    "drizzle-zod": "^0.8.2",
    "formsnap": "^2.0.1",
    "grab-api.js": "^0.9.131",
    "highlight.js": "^11.11.1",
    "jszip": "^3.10.1",
    "lucide-svelte": "^0.513.0",
    "mode-watcher": "^1.0.7",
    "postcss": "^8.5.4",
    "resend": "4.5.2",
    "sortablejs": "^1.15.6",
    "stripe": "^18.2.1",
    "svelte": "^5.33.14",
    "svelte-dnd-action": "^0.9.61",
    "svelte-lightbox": "^1.1.7",
    "svelte-motion": "^0.12.2",
    "svelte-sonner": "^1.0.4",
    "svelte-splitpanes": "^8.0.9",
    "sveltekit-flash-message": "^2.4.6",
    "sveltekit-rate-limiter": "^0.6.1",
    "sveltekit-superforms": "^2.26.1",
    "tailwind-merge": "^3.3.0",
    "tailwind-variants": "^1.0.0",
    "tailwindcss": "^4.1.8",
    "tailwindcss-animate": "^1.0.7",
    "three": "^0.177.0",
    "zod": "^3.25.53"
  }
}