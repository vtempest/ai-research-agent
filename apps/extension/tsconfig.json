{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "types": ["chrome"],
    "allowJs": true,
    "checkJs": false,
    "isolatedModules": true
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.svelte",
    "src/pages/app/index.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
