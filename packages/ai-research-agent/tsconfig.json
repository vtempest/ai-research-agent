{
  "include": [
    "src/index.ts", 
   ],
  "exclude": [
    "node_modules",
  ],
  "compilerOptions": {
    "typeRoots": ["src/types.d.ts"],
    "target": "ESNext",
    "module": "ESNext",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "noEmitOnError": false,
    "strict": false,
    "isolatedModules": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true
  },
}
